<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:RSBot.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="RSBot.Views.Dialogs.ProfileSelectionDialog"
        Title="Select Profile"
        Width="400" Height="170" CanResize="False"
        WindowStartupLocation="CenterOwner"
        Background="rgba(15, 15, 15, 0.87)"
        ExtendClientAreaToDecorationsHint="True"
		ExtendClientAreaChromeHints="NoChrome"
        x:DataType="vm:ProfileSelectionDialogViewModel">

	<Design.DataContext>
		<vm:ProfileSelectionDialogViewModel/>
	</Design.DataContext>

	<Window.Styles>
		<Style Selector="Button.primary">
			<Setter Property="Background" Value="DodgerBlue"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="Padding" Value="10,5"/>
		</Style>

		<Style Selector="Button.create">
			<Setter Property="Width" Value="24"/>
			<Setter Property="Height" Value="24"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="CornerRadius" Value="6"/>
		</Style>

		<Style Selector="Button.delete">
			<Setter Property="Background" Value="#a83232"/>
			<Setter Property="Foreground" Value="#ffd6d6"/>
			<Setter Property="Width" Value="24"/>
			<Setter Property="Height" Value="24"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="CornerRadius" Value="6"/>
			<Setter Property="FontSize" Value="14"/>
		</Style>
	</Window.Styles>

	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Profile Selection Row -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
			<TextBlock Text="Select a profile:"
                       VerticalAlignment="Center"/>

			<ComboBox ItemsSource="{Binding Profiles}"
                      SelectedItem="{Binding SelectedProfile}"
                      Width="180"/>

			<Button
                    Classes="create"
                    Command="{Binding CreateProfileCommand}">
				<Path Stroke="White" Width="10" Height="10" StrokeThickness="1" Stretch="Uniform">
					<Path.Data>
						<StreamGeometry>M14.5,13 L14.5,3.75378577 C14.5,3.33978577 14.164,3.00378577 13.75,3.00378577 C13.336,3.00378577 13,3.33978577 13,3.75378577 L13,13 L3.75387573,13 C3.33987573,13 3.00387573,13.336 3.00387573,13.75 C3.00387573,14.164 3.33987573,14.5 3.75387573,14.5 L13,14.5 L13,23.7523651 C13,24.1663651 13.336,24.5023651 13.75,24.5023651 C14.164,24.5023651 14.5,24.1663651 14.5,23.7523651 L14.5,14.5 L23.7498262,14.5030754 C24.1638262,14.5030754 24.4998262,14.1670754 24.4998262,13.7530754 C24.4998262,13.3390754 24.1638262,13.0030754 23.7498262,13.0030754 L14.5,13 Z</StreamGeometry>
					</Path.Data>
				</Path>
			</Button>

			<Button
                    Classes="delete"
                    Command="{Binding DeleteProfileCommand}">
				<Path Stroke="White" Width="10" Height="10" Stretch="Uniform" StrokeThickness="1.5" VerticalAlignment="Center">
					<Path.Data>
						<StreamGeometry>M3.5,3.5 L20.5,20.5 M20.5,3.5 L3.5,20.5</StreamGeometry>
					</Path.Data>
				</Path>
			</Button>
		</StackPanel>

		<!-- Save Selection Checkbox -->
		<CheckBox Grid.Row="1"
                  Content="Save selection"
                  IsChecked="{Binding SaveSelection}"
                  HorizontalAlignment="Center"
                  Margin="0,10"/>

		<!-- Continue Button -->
		<Button Grid.Row="3"
                Content="Continue"
                Classes="primary"
                Command="{Binding ContinueCommand}"
                HorizontalAlignment="Center"
                Width="150"
                Height="40"/>
	</Grid>
</Window>
