<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RSBot.Core.UI.InputDialog"
        Title="{Binding Title}"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="_lblTitle" 
                   Grid.Row="0"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="_lblMessage"
                   Grid.Row="1"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <StackPanel Grid.Row="2">
            <ComboBox x:Name="_comboBox"
                      Width="200"
                      HorizontalAlignment="Left"/>
            
            <TextBox x:Name="_txtValue"
                     Width="200"
                     HorizontalAlignment="Left"/>
            
            <NumericUpDown x:Name="_numValue"
                          Width="200"
                          HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button x:Name="_btnOK"
                    Content="OK"
                    Width="80"/>
            <Button x:Name="_btnCancel"
                    Content="Cancel"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
